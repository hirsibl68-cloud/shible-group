// =====================================================
//  Prisma Schema for BiPCOIN Platform  (SQLite Version)
// =====================================================

// ----------------------------
//   Data Source (SQLite)
// ----------------------------
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ----------------------------
//   Generator
// ----------------------------
generator client {
  provider = "prisma-client-js"
}

// ----------------------------
//   User Model
// ----------------------------
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  country   String?

  // العلاقات
  wallet    Wallet?
  deposits  Deposit[]
  withdraws Withdraw[]
  tasks     Task[]

  createdAt DateTime  @default(now())
}

// ----------------------------
//   Wallet Model
// ----------------------------
model Wallet {
  id        String   @id @default(cuid())
  balance   Float    @default(0)
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

// ----------------------------
//   Deposit Model
// ----------------------------
model Deposit {
  id        String   @id @default(cuid())
  amount    Float
  method    String      // مثل USDT-TRC20 أو BTC
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// ----------------------------
//   Withdraw Model
// ----------------------------
model Withdraw {
  id        String   @id @default(cuid())
  amount    Float
  method    String
  address   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// ----------------------------
//   Tasks Model (Daily Tasks)
// ----------------------------
model Task {
  id        String   @id @default(cuid())
  type      String
  reward    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
